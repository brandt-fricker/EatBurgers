<h1 class="center-text">NomNomNomNom</h1>


<div class="container">
  <div class="inner_div">
    <h2>Eat Me!!!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devour}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="inner_div">
    <h2>Burgers Consumed</h2>

    <ul>
      {{#each burgers}}
        {{#if devour}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <br>
</div>

<div class="container">

  <div class="add-burger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="sleepy">What do you want to do with your burger?</label><br>
        <input type="radio" name="devour" value="1" checked> Eat IT!<br>
        <input type="radio" name="devour" value="0"> Save for Later
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>  
</div>
