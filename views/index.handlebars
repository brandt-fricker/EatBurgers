<h1>NomNomNomNom</h1>

<h2>Eat Me!!!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Consumed</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devour</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eat IT!<br>
    <input type="radio" name="sleepy" value="0"> Save for Later
  </div>

  <button type="submit">Add Burger</button>
</form>
